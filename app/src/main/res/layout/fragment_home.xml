<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.home.HomeFragment">

    <ImageView
        android:id="@+id/small_logo_home"
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_two_persons"
        android:contentDescription="@string/logo_description"
        app:tint="@color/purple_500">
    </ImageView>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FaceMorph"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textSize="42sp"
        app:layout_constraintTop_toBottomOf="@id/small_logo_home">

    </TextView>


<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/camera_button"
    android:layout_width="82dp"
    android:layout_height="82dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginBottom="32dp"
    app:tint="@color/white"
    android:src="@drawable/ic_camera"
    app:fabCustomSize="82dp"
    android:backgroundTint="@color/purple_500"
    app:maxImageSize="28dp"
    android:contentDescription="@string/camera_button">

</com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gallery_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="32dp"
        app:tint="@color/purple_500"
        android:src="@drawable/ic_portrait"
        android:layout_marginLeft="16dp"
        app:fabCustomSize="72dp"
        android:background="@null"
        app:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp"
        app:maxImageSize="54dp"
        android:contentDescription="@string/camera_button">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        app:tint="@color/purple_500"
        android:src="@drawable/ic_list"
        app:fabCustomSize="72dp"
        android:background="@null"
        app:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp"
        android:layout_marginRight="16dp"
        app:maxImageSize="54dp"
        android:contentDescription="@string/camera_button">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.constraintlayout.widget.ConstraintLayout>